@import '_mixins'
@import 'modules/_fsNavmenu'
@import 'modules/_searchbar'

.header {
  position: relative
  flex-set: row nowrap
  justify-content: center
  z-index: 5
  background: #636363

  &__body {
    flex-set: row nowrap
    flex-content-position: space-between center
    padding: 10px 0 10px 0

    * {
      z-index: 5
    }

    @media (max-width: 560px) {
      .searchbar {
        display: none
      }
    }
  }
}

.fixed-header {
  position: fixed
  top: 0
  left: 0
  width: 100%
}

.navmenu {
  @media (max-width: $burgerMenuShowWidth) {
    display: none
  }

  &__body {
    display: flex
  }

  &__list {
    flex-set: row wrap
    padding: 0 5px 0 5px
    margin: 0 -20px 0 0px

    li {
      margin-right: 10px

      a, button {
        padding: 4px 8px 4px 8px
        color: var(--main-font-color)
        transition: all 0.2s ease 0s
      }
    }
  }
}

.logo {
  z-index: 10
}
