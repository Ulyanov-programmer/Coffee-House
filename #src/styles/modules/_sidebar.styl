.sidebar {
	z-index 10;
	position fixed;
	top 0;
	right 0;
	transform translate3d(100%, 0, 0);
	height 100%;
	background #F4F4F4;
	width 479px;
	flex-set column nowrap;
	justify-content space-between;
	transition all 0.3s ease;

	&.active {
		right 0;
		transform translate3d(0, 0, 0);
	}

	&__body {
		padding 25px 40px;
		overflow auto;
	}

	&__header {
		margin-bottom 25px;
	}

	&__status {
		font-size 40px;
	}

	&__statuses {
		flex-set column nowrap;
	}

	&__status {
	}

	&__footer {
		border-top 1px solid #0000002f;
		padding 25px 40px;
		background #E9E9E9;
		firstLevelElementsMargin 'bottom' 30;
	}

	&__price-calc-column {
		flex-set column nowrap;
	}

	&__close-row {
		flex-set row nowrap;
		justify-content space-between;
		align-items center;
		firstLevelElementsMargin 'right' 8;
	}

	&__close-footer {
		font-size 1px;

		circle, path {
			transition all 0.3s ease;
		}

		&:hover, &:focus {
			circle {
				fill #fff;
			}

			path {
				stroke #CD4126;
			}
		}
	}

	&__close-label {
		flex-set row nowrap;
		justify-content space-between;
		align-items center;
		firstLevelElementsMargin 'right' 8;
		font-size 13px;
		font-family OpenSans;
		font-weight 600;
		text-transform uppercase;
		color hsla(10, 69%, 48%, 0.497);
	}
}

.order-label {
	flex-set row nowrap;
	align-items center;
	firstLevelElementsMargin 'right' 20;

	&__coffe-preview {
	}

	&__title {
		font-size 20px;
	}

	&__count {
		margin-left auto;
	}
}

.price-calc-column {
	&__element {
		flex-set row nowrap;
		justify-content space-between;
		padding 5px 0;
		color rgba(0, 0, 0, 0.7);

		&:not(:last-child) {
			border-bottom 1px solid hsla(0, 0, 0, 0.1);
		}
	}

	&__text {
	}

	&__price {
		font-family OpenSans;
	}

	&__finally {
		color #000;
		font-size 25px;
		font-weight 500;
	}
}

.status {
	position relative;
	padding-bottom 10px;
	padding-left 25px;

	&:first-child {
		&:after {
			margin-top 20px;
		}
	}

	&:last-child {
		&:after {
			height 40%;
		}

		&.active {
			&:after {
				height 100%;
			}
		}
	}

	&:after {
		position absolute;
		display inline-block;
		top 0;
		left 0;
		height 100%;
		width 1px;
		background #0000002a;
		content '';
	}

	&.unactive {
		color rgba(0, 0, 0, 0.5);
	}

	.order-label {
		&:not(:last-child) {
			position relative;

			&:after {
				position absolute;
				bottom 0;
				right 0;
				width 74%;
				border-bottom 1px solid #0000002a;
				content '';
			}
		}
	}

	&__metadata {
		display flex;
		justify-content space-between;
		align-items center;
	}

	&__title {
		position relative;
		font-size 30px;

		&:after {
			position absolute;
			left 0;
			top 50%;
			transform translate3d(-28px, -50%, 0);
			block-size 6px;
			background #000;
			border-radius 50%;
			content '';
		}
	}

	&__time {
		font-size 15px;
		text-transform uppercase;
		color #00000081;
	}
}

.sidebar-swipe-wrapper {
	z-index 9;
	position fixed;
	top 0;
	right 0;
	width 5vw;
	height 100vh;
	cursor grab;
	user-select none;

	&:active {
		cursor grabbing;
	}

	&.active {
		width 100vw;
	}
}