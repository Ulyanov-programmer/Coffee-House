.searchbar {
  flex-set: row nowrap
  background: #fff

  &__input {
    padding: 10px
    transition: all 0.3s ease

    &:hover, &:focus {
      background: #d8d5d5
    }
  }

  &__submit {
    padding: 10px
    transition: all 0.3s ease

    &:hover, &:focus {
      background: #acabab
    }

    img {
      block-size: 20px
    }
  }
}